@model Post

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}

<h1>Edit Post</h1>

<hr />
<div class="row">
    <div class="col-12">
        @* enctype="multipart/form-data" resim yüklemek için kullanılır *@
        <form asp-action="Edit" asp-area="AdminPanel" asp-controller="Posts" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            @*Eski fotoğrafı kaybetmemek için hidden olarak bir tane tutulur*@
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input type="hidden" asp-for="ImageUrl" />
                <img src="@Model.ImageUrl" style="height:350px;" class="w-50 form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input type="file" id="file" name="file" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea rows="10" asp-for="Content" class="form-control w-100"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" asp-area="AdminPanel" asp-controller="Posts" class="btn btn-warning">Back to List</a> |
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}