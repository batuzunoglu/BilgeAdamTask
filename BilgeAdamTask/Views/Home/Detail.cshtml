@model Post
@{
    ViewData["Title"] = "Detail";
}
<div class="col-lg-12">

    <!-- Title -->
    <h1 class="mt-4">@Model.Title</h1>

    <!-- Author -->
    <p class="lead">
        by @Model.User.Name @Model.User.SurName </a>
    </p>

    <div class="d-flex justify-content-center">
        <!-- Preview Image -->
        <img class="img-fluid rounded" src="@Model.ImageUrl" alt="image">
    </div>

    <hr>

    <!-- Post Content -->
    <p class="lead">
        @Model.Content
    </p>

    <!-- Date/Time -->
    <p>
        Posted on @Model.PublishDate.ToString("dd:MM:yyyy")
    </p>
    <div class="my-3">
        <span class="badge badge-primary">@Model.Category.Name</span>
    </div>
    <hr>
    <a class="btn btn-warning" asp-action="Index">Ana Sayfaya Dön</a>

</div>